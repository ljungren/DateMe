<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.ljungren.dateme.MatchActivity">

    <Button
        android:text="Change Pofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeButton"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/nameTxt2"
        android:layout_marginEnd="12dp" />

    <Button
        android:text="See all users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showButton"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/changeButton"
        android:layout_alignBottom="@+id/changeButton"
        android:layout_toEndOf="@+id/nameTxt2" />

    <Button
        android:text="Get match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchButton"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/changeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTxt2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/matchNameTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/matchInfoTxt"
        android:layout_below="@+id/matchNameTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/matchTelTxt"
        android:layout_below="@+id/matchInfoTxt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
